<?xml version="1.0" encoding="utf-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

 <bean id="EmailNotificationAdvisor"  lazy-init="true"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref local="EmailNotificationAdvice" />
		</property>
		<property name="patterns">
			<value>.*</value>
		</property>
	</bean>
	
<!--ADVICE-->
 <bean id="EmailNotificationAdvice"  lazy-init="true" class="com.org.yobox.aop.EmailNotifier">
		<constructor-arg index="0">
			<list>
				<value>updateCustomerSubscription</value>
				<value>addPasswordResetToken</value>
			</list>
		</constructor-arg>
	</bean>
