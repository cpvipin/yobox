<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class 
   name="com.org.yobox.model.CustomerAddress" 
   table="customer_address">


<id  name="id"   column="id"    type="java.lang.Integer"   >
<generator class="identity"></generator>
</id>

     
        
        
        <many-to-one
            name="customer"
            class="com.org.yobox.model.Customer"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            lazy="false"
        >
            <column
                name="customer_id" 
            />
        </many-to-one>
        
        
    
    <property
            name="fullName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="full_name"
            length="100"
    />
    
    
      <property
            name="pinCode"
            type="java.lang.String"
            update="true"
            insert="true"
            column="pin_code"
            length="10"
    />
    
    <property
            name="locality"
            type="java.lang.String"
            update="true"
            insert="true"
            column="locality"
            length="128"
    />
    
    
    <many-to-one
            name="state"
            class="com.org.yobox.model.State"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            lazy="false"
        >
            <column
                name="state_id" 
            />
        </many-to-one>
    
    
    
    <property
            name="address"
            type="java.lang.String"
            update="true"
            insert="true"
            column="address"
            length="512"
    />
    
    
    <property
            name="mobile"
            type="java.lang.String"
            update="true"
            insert="true"
            column="mobile"
            length="12"
    />
    
     <property
            name="email"
            type="java.lang.String"
            update="true"
            insert="true"
            column="email"
            length="12"
    />
    
    
       <property
            name="isDefault"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="is_default"
    />
    
    
  
    
    
</class>

<query name="custaddr.deleteAddressByCustomer"><![CDATA[
            delete from CustomerAddress where customer.id=:customerId
        ]]></query>



<query name="custaddr.getAllCustomerAddressByCustomerId"><![CDATA[
from CustomerAddress as ca where  ca.customer.id=:custId order by ca.id desc ]]></query>


</hibernate-mapping>